<Window x:Class="CharacterSheet.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterSheet"
        mc:Ignorable="d"
        Title="LoginForm" Height="450" Width="800">
    <Grid KeyDown="Grid_KeyDown">
        <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="26" Margin="325,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="325,196,0,0" VerticalAlignment="Top" Width="172" Height="26"/>
        <Label x:Name="label" Content="UserName:" HorizontalAlignment="Left" Margin="222,149,0,0" VerticalAlignment="Top" Width="98"/>
        <Label x:Name="PasswordLabel" Content="Password:" HorizontalAlignment="Left" Margin="222,196,0,0" VerticalAlignment="Top" Width="98"/>
        <Button x:Name="LoginButton" Content="Button" HorizontalAlignment="Left" Margin="325,248,0,0" VerticalAlignment="Top" Width="172" Click="Login_Click"/>

    </Grid>
</Window>
